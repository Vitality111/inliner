{
  "name": "inline-builder",
  "version": "1.5.0",
  "description": "Compress and inline all assets (CSS, JS, images, fonts, video, audio) into a single HTML file. Also supports optimize-only and deinline modes.",
  "type": "module",
  "scripts": {
    "build": "node inline.mjs",
    "optimize": "node inline.mjs --optimizeOnly=true --assetsDir=assets",
    "deinline": "node inline.mjs --deinline --",

    "cocos:build": "node cocos-inline.mjs --input ./build/web-mobile --output ./playable.html",
    "cocos:build:full": "node cocos-inline.mjs --input ./build/web-mobile --output ./playable.html --compress-images --compress-audio --compress-fonts --verbose",
    "cocos:optimize": "node cocos-inline.mjs --input ./build/web-mobile --output ./playable.html --compress-images --compress-audio --compress-fonts"
  },
  "bin": {
    "inline": "./inline.mjs",
    "cocos-inline": "./cocos-inline.mjs"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "fluent-ffmpeg": "^2.1.3",
    "fontmin": "^0.9.7",
    "sharp": "^0.33.4"
  }
}
